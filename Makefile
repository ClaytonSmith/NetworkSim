########################################################################
#                                                                      #
#                  MAKEFILE                   -   CS422: LAB4          #
#                                                                      #
########################################################################

CC      =       gcc
AS      =       gas
LD      =       ld
MAKETD  =       makedepend
AWK     =       awk
MAKE    =       make

#------------------------------------------------------------------------
# source files
#------------------------------------------------------------------------

SRC     =       prog3.c node0.c node1.c node2.c node3.c

#------------------------------------------------------------------------
# include files
#------------------------------------------------------------------------

INC     =	

#------------------------------------------------------------------------
# object files
#------------------------------------------------------------------------

OBJ     =       prog3.o node0.o node1.o node2.o node3.o

#------------------------------------------------------------------------
# executable file
#------------------------------------------------------------------------

EXE     =       lab3

#------------------------------------------------------------------------
# make targets
#------------------------------------------------------------------------

${EXE}  : ${OBJ}
	${CC} -o ${EXE} ${OBJ} 

prog3.o	: prog3.c
	${CC} -c -w prog3.c 

node0.o	: node0.c
	${CC} -c -w node0.c
node1.o	: node1.c
	${CC} -c -w node1.c
node2.o	: node2.c
	${CC} -c -w node2.c
node3.o	: node3.c
	${CC} -c -w node3.c

clean	:
	rm -rf ${EXE} *.o
	rm -rf *~

#------------------------END OF MAKEFILE---------------------------------
